<div class="page header">
  <h1>All Directors</h1>
</div>

<p>
  <a href="/directors/new" class="btn btn-primary">Add a New Director</a>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>DOB</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @all_directors.each do |director|  %>
    <tr>
      <td><img src="<%= director.image_url %>" width="80"></td>
      <td><%= director.dob %></td>
      <td><%= director.name %></td>
      <td><%= truncate(director.bio) %></td>
      <td>
        <a class="btn btn-default btn-block" href="/directors/<%= director.id %>">
          <i class="fa fa-search-plus"></i>
        </a>
      </td>
      <td>
        <a class="btn btn-default btn-block" href="/directors/<%= director.id %>/edit">
          <i class="fa fa-edit"></i>
        </a>
      </td>

      <td>
        <a class="btn btn-default btn-block" href="/directors/delete/<%= director.id %>">
          <i class="fa fa-trash-o"></i>
        </a>
      </td>

    </tr>
    <% end  %>
  </tbody>

</table>
